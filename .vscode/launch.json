{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Backend + Frontend",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/MARK-Tool/MARK-Tool/web_gui/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "FLASK_HOST": "0.0.0.0",
                "FLASK_PORT": "5000"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/MARK-Tool/MARK-Tool/web_gui",
            "serverReadyAction": {
                "pattern": "Running on (https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
        {
            "name": "Flask: Backend API Only",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/MARK-Tool/MARK-Tool/web_gui/app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1",
                "FLASK_HOST": "0.0.0.0",
                "FLASK_PORT": "5000"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/MARK-Tool/MARK-Tool/web_gui"
        },
        {
            "name": "Flask: Direct Python Execution",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/MARK-Tool/MARK-Tool/web_gui/app.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_HOST": "0.0.0.0",
                "FLASK_PORT": "5000"
            },
            "justMyCode": false,
            "cwd": "${workspaceFolder}/MARK-Tool/MARK-Tool/web_gui"
        }
    ],
    "compounds": []
}
